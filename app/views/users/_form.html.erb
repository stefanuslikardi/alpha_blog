<div class="container" style= "" >
    <div class="row justify-content-center">
        <div class="col-10">
            <%= render 'shared/errors', obj: @user %>
            <%= form_with(model: @user, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
                <div class="mb-3">
                    <%= f.label :username, class: "form-label text-light" %>
                    <%= f.text_field :username, class: "form-control shadow rounded", placeholder: "Enter a username" %>
                </div>

                <div class="mb-3">
                    <%= f.label :email, class: "form-label text-light" %>
                    <%= f.email_field :email, class: "form-control shadow rounded", placeholder: "Enter your email" %>
                </div>

                <div class="mb-3">
                    <%= f.label :password, class: "form-label text-light" %>
                    <%= f.password_field :password, class: "form-control shadow rounded", placeholder: "Enter your password" %>
                </div>

                <div class="form-group row justify-content-center text-center">
                    <%= f.submit(@user.new_record? ? "Sign Up" : "Update profile", class: "btn btn-outline-light btn-lg") %>
                </div>
            <% end %>
        </div>
        <div class="mb-3 text-center">
            <%= link_to '[ Cancel and return to blogger lists ]', users_path, class: "text-info" %>
        </div>
    </div>
</div> 